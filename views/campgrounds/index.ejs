<% include ../partials/header%>




<div class='container'>
    
    <header class='jumbotron'>
        <div class='container'>
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class='btn btn-primary btn-lg' href='/campgrounds/new'>add new campground</a>   
            </p>
        </div>
         
    </header>
    
   <div class='row text-center' style="display: flex; flex-wrap: wrap">
       
           <% campGrounds.forEach(function(ele){ %>
        <div class=' col-lg-3 col-md-6'>
            <div class='thumbnail'>
                <img src="<%= ele.image %>">   
                <div class='caption'> <h4><%= ele.name %></h4></div>
                <p>
                    <a class='btn btn-primary' href="/campgrounds/<%= ele._id %>">More info</a>
                </p>
            </div>
        </div>
     
    <% })%>
    
   </div>
    

</div>
<%include ../partials/footer%>